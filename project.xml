<?xml version="1.0" encoding="Shift_JIS"?>
<project xmlns:j="jelly:core">

  <!-- the version of maven's project object model -->
  <pomVersion>3</pomVersion>
  
  <!-- a unique name for this project -->
  <id>winstone</id>
  
  <!-- a short but descriptive name for the project -->
  <name>Winstone Servlet Container</name>
  
  <!-- The version of the project under development, e.g.
       1.1, 1.2, 2.0-SNAPSHOT -->
  <currentVersion>0.7rc</currentVersion>
  
  <!-- the year the project started -->
  <inceptionYear>2003</inceptionYear>
  <package>winstone</package>

  <!-- any mailing lists for the project -->
  <mailingLists/>
  
  <!-- who the developers are for the project -->
  <developers>
    <developer>
      <name>Rick Knowles</name>
      <id>rickk</id>
      <email>rick@knowleses.org</email>
    </developer>
  </developers>

  <!-- jar files the project is dependent on -->
  <dependencies>

    <dependency>
      <id>junit</id>
      <version>3.8.1</version>
    </dependency>

    <dependency>
      <id>httpunit</id>
      <version>1.6</version>
    </dependency>

    <dependency>
      <id>nekohtml</id>
      <version>0.9.4</version>
    </dependency>

    <dependency>
      <groupId>rhino</groupId>
      <artifactId>js</artifactId>
      <version>1.6R1</version>
    </dependency>

    <dependency>
      <groupId>sunmicrosystems</groupId>
      <artifactId>activation</artifactId>
      <version>1.0.2</version>
    </dependency>

    <dependency>
      <groupId>sunmicrosystems</groupId>
      <artifactId>javamail</artifactId>
      <version>1.3.2</version>
    </dependency>
    
    <!--dependency>
      <groupId>xerces</groupId>
      <artifactId>xercesImpl</artifactId>
      <version>2.6.2</version>
    </dependency>

    <dependency>
      <groupId>xerces</groupId>
      <artifactId>xmlParserAPIs</artifactId>
      <version>2.6.2</version>
    </dependency-->

  </dependencies>
  
  <!-- build information for the project -->
  <build>
    <sourceDirectory>src/java</sourceDirectory>
    <unitTestSourceDirectory>src/test</unitTestSourceDirectory>
    
    <!--sourceModifications>
      <sourceModification>
        <className>javax.mail.internet.MimeMultipart</className>
        <excludes>
          <exclude>winstone/filters/multipart/MultipartRequestFilter.java</exclude>
          <exclude>winstone/filters/multipart/MultipartRequestWrapper.java</exclude>
        </excludes>
      </sourceModification>
    </sourceModifications-->

    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <excludes>
        <exclude>**/*NaughtyTest.java</exclude>
        <exclude>winstone/testCase/load/LoadTest.java</exclude>
      </excludes>
    </unitTest>

    <resources>
      <resource>
        <directory>src/conf</directory>
        <filtering>true</filtering>
        <includes>
          <include>**/*.*</include>
        </includes>
      </resource>
      <resource>
        <directory>src/java</directory>
        <includes>
          <include>**/*.properties</include>
        </includes>
      </resource>
    </resources>
  </build>

</project>

